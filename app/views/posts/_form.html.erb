<%= form_for(@post) do |f| %>

  <% render '../shared/error_messages' %>

  <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "Choose a category"}) %><br>
  <%= f.label :title %><br>
  <%= f.text_field :title, palce_holder: "Type the post title here"%><br/>
  <%= f.label :content %>
  <%= f.text_area :content, size: "60x12", palce_holder: "Type the post conent here"%><br>

  <%= f.submit %>
<% end %>